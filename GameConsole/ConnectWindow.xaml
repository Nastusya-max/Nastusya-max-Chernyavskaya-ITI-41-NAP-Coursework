<Window x:Class="GameConsole.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameConsole"
        mc:Ignorable="d"
        Title="ConnectWindow" Height="180" Width="300">
    <Grid>
        <Button Content="Host" HorizontalAlignment="Left" Margin="10,80,0,0" VerticalAlignment="Top" Height="55" Width="128" Click="Host_Click"/>
        <Button Content="Connect" HorizontalAlignment="Left" Margin="143,80,0,0" VerticalAlignment="Top" Height="55" Width="128" Click="Connect_Click"/>
        <TextBox x:Name="Ip" HorizontalAlignment="Left" Height="32" Margin="10,43,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="261"/>
        <Label Content="Ip" HorizontalAlignment="Left" Height="28" Margin="10,10,0,0" VerticalAlignment="Top" Width="28"/>

    </Grid>
</Window>
